<%= simple_form_for essay, html: { class: "essay form" } do |f| %>
  <% if essay.errors.any? %>
    <div class="error-message">
      <%= essay.errors.full_messages.to_sentence.capitalize %>
    </div>
  <% end %>

  <%= f.input :course_id, input_html: { autofocus: true } %>
   <%= f.input :question, input_html: { autofocus: true } %>
  <%= link_to "Cancel", essays_path, class: "btn btn--light" %>
  <%= f.submit class: "btn btn--secondary" %>
<% end %>
