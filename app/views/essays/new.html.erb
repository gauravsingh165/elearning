<h1>Create a New Essay</h1>

<%= form_with(model: @essay, url: essays_path) do |form| %>
  <% if @essay.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@essay.errors.count, "error") %> prohibited this essay from being saved:</h2>

      <ul>
        <% @essay.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :question %>
    <%= form.text_area :question, rows: 4 %>
  </div>
<div class="field">
    <%= form.label :answer %>
    <%= form.text_area :answer, rows: 4 %>
  </div>

  <!-- Add other fields for the essay as needed -->

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
