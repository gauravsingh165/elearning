
<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Role</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td>
          <%= turbo_frame_tag "user_#{user.id}" do %>
            <%= link_to "Edit", edit_user_detail_url(user), remote: true, data: { turbo_frame: "user_#{user.id}" } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
