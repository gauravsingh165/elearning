

<h1 class="main-heading">Admin Courses Index</h1>
<%= link_to 'Courses', courses_url,class:"btn btn-outline-secondary"%>
<%= link_to 'Create Courses', new_course_path, class:"btn btn-outline-success"%><br>
<h1> Product Version</h1>
<%= link_to "New Product Version", new_product_version_path ,class:"btn btn-outline-info"%><br>
<h1> Product Line</h1>
<%= link_to 'New Product Line', new_product_line_path, class:"btn btn-outline-danger" %>
<h1>MCQ</h1>
<%= link_to "MCQ" ,mcqs_path ,class:"btn btn-outline-warning"%>
<table style="width: 30%; border-collapse: collapse;"  class="custom-table">
  <thead>
    <tr>
      <th style="border: 1px solid #ccc; padding: 8px;">ID</th>
      <th style="border: 1px solid #ccc; padding: 8px;">Email</th>
      <th style="border: 1px solid #ccc; padding: 8px;">Role</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td style="border: 1px solid #ccc; padding: 8px;"><%= user.id %></td>
        <td style="border: 1px solid #ccc; padding: 8px;"><%= user.email %></td>
        <td style="border: 1px solid #ccc; padding: 8px;"><%= user.role %></td>
      </tr>
    <% end %>
  </tbody>
</table>























