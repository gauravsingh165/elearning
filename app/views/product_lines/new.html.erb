
<style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f2f2f2;
      margin: 0;
      padding: 0;
    }
    .container {
      width: 80%;
      margin: 0 auto;
      background-color: #fff;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      padding: 20px;
      text-align: center;
    }
    h1 {
      font-size: 24px;
      color: #007BFF;
      margin-bottom: 20px;
    }

    form {
      margin: 0 auto;
      max-width: 400px;
    }

    .field {
      margin: 10px 0;
      text-align: left;
    }

    label {
      font-weight: bold;
      display: block;
      margin-bottom: 5px;
    }

    input[type="text"] {
      width: 100%;
      padding: 10px;
      border: 1px solid #ccc;
      border-radius: 5px;
    }
    .actions {
      margin-top: 15px;
    }

    button {
      padding: 10px 20px;
      background-color: #007BFF;
      color: #fff;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-size: 16px;
    }
    .link {
      text-decoration: none;
      color: #007BFF;
      font-weight: bold;
      display: block;
      margin-top: 20px;
    }

    .link:hover {
      text-decoration: underline;
    }
</style>




<main class="container">
  <%= link_to sanitize("&larr; Back to quotes"), root_path %>

  <div class="header">
    <h1>New ProductLine</h1>
  </div>

  <%= turbo_frame_tag @product_line do %>
    <%= render "form", product_line: @product_line %>
  <% end %>
</main>