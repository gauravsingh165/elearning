<%= simple_form_for @product_line, html: { class: "product form" } do |f| %>
  <% if @product_line.errors.any? %>
    <div class="error-message">
      <%= @product_line.errors.full_messages.to_sentence.capitalize %>
    </div>
  <% end %>

  <%= f.input :name, input_html: { autofocus: true } ,placeholder:"enter the name" %>
<%= link_to "Cancel", admin_index_path, class: "btn btn--light" %>
  <%= f.submit " create",class: "btn btn--secondary" %>
<% end %>


