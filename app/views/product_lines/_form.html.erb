<div id="product_versions_list">
  <%= turbo_stream_from "product_versions_list" %>
  </div>

<%= simple_form_for product_line, html: { class: "product-line form" } do |f| %>
  <% if product_line.errors.any? %>
    <div class="error-message">
      <%= product_line.errors.full_messages.to_sentence.capitalize %>
    </div>
  <% end %>

  <%= f.input :name, input_html: { autofocus: true } %>
  <%= link_to "Cancel", product_lines_path, class: "btn btn--light" %>
  <%= f.submit class: "btn btn--secondary" %>
<% end %>



