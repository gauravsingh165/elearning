<div style='text-align:center'>
<h1>Create a New Course</h1>
<%= form_with(model: @course, local: true) do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :start_date %>
    <%= form.date_field :start_date, class: 'form-control' %>
  </div>

  <div class="field">
    <%= form.label :end_date %>
    <%= form.date_field :end_date, class: 'form-control' %>
  </div>
 <div class="field">
    <%= form.label :product_line_id %>
    <%= form.select :product_line_id, options_for_select(ProductLine.all.map { |pl| [pl.name, pl.id] }) %>
  </div>
   <div class="field">
    <%= form.label :product_version_id %>
    <%= form.select :product_version_id, options_for_select(ProductVersion.all.map { |pv| [pv.name, pv.id] }) %>
  </div>
  
  <div class="actions">
    <%= form.submit 'Create Course', class: 'btn btn-primary' %>
    <%= link_to 'Cancel', @course, class: 'btn btn-secondary' %>

  </div>
<% end %>

<%= link_to 'Back', courses_path, class: 'btn btn-secondary' %>
</div>
